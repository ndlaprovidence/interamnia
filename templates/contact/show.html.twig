{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <h1>Contact</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ contact.nom }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ contact.prenom }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ contact.telephone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ contact.email }}</td>
            </tr>

            <td>
                <a title="Retour" href="{{ path('contact_index') }}"<button class="btn btn-primary"><i class="fa fa-arrow-left" aria-hidden="true"></i>
            </td>
            <td>
                {% if is_granted('ROLE_SUPER_ADMIN') %}        
                    <a title="Modifier" href="{{ path('contact_edit', {'id': contact.id}) }}"<button class="btn btn-primary"><i class="fa fa-pencil"aria-hidden="true"></i></button></a>
                {% endif %}
            </td>
        </tbody>
    </table>


    {{ include('contact/_delete_form.html.twig') }}
{% endblock %}
