                    <td>
                        <a title="Afficher" href="{{ path('entreprise_show', {'id': entreprise.id}) }}"<button class="btn btn-primary"><i class="fa fa-eye" aria-hidden="true"></i> </button></a>        
                    </td>                    
                    <td>                    
                        {% if is_granted('ROLE_SUPER_ADMIN') %}
                            <a title="Modifier" href="{{ path('entreprise_edit', {'id': entreprise.id}) }}"<button class="btn btn-primary"><i class="fa fa-pencil"aria-hidden="true"></i></button></a>                            
                     <td>        
                            <a title="Consulter la liste des stagiaires" href="{{ path('entreprise_liste_stagiaire', {'id': entreprise.id}) }}"<button class="btn btn-primary"><i class="fa fa-user-circle" aria-hidden="true"></i>                            
                    </td>   
                        {% endif %}
                    </td>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">Aucune données trouvées</td>
            </tr>
        {% endfor %}
