    <h1>Entreprise</h1>

    {% if is_granted('ROLE_SUPER_ADMIN') %}        
        <a href="{{ path('entreprise_new') }}" button class="btn btn-primary" orderBy="u.nom" >Créer</button></a>
    {% endif %}
    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Région</th>
                <th>Département</th>
                <th>Ville</th>
                <th>Code postal</th>
                <th>Rue</th>
                <th>Contact</th>
                <th>Téléphone</th>
                <th>E-mail</th>
                <th>Activité</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entreprise in entreprises %}
            <tr>
                <td>{{ entreprise.nom }}</td>
                <td>{{ entreprise.region }}</td>
                <td>{{ entreprise.departement }}</td>
                <td>{{ entreprise.ville }}</td>
                <td>{{ entreprise.codePostal }}</td>
                <td>{{ entreprise.rue }}</td>
                <td>{{ contact.nom }}</td>
                <td>{{ entreprise.telephone }}</td>
                <td>{{ entreprise.email }}</td>
                <td>{{ entreprise.activite }}</td>
