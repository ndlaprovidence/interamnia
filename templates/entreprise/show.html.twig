{% extends 'base.html.twig' %}

{% block title %}Entreprise{% endblock %}

{% block body %}
    <h1>Entreprise</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ entreprise.nom }}</td>
            </tr>
            <tr>
                <th>Région</th>
                <td>{{ entreprise.region }}</td>
            </tr>
            <tr>
                <th>Département</th>
                <td>{{ entreprise.departement }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ entreprise.ville }}</td>
            </tr>
            <tr>
                <th>Code postal</th>
                <td>{{ entreprise.codePostal }}</td>
            </tr>
            <tr>
                <th>Rue</th>
                <td>{{ entreprise.rue }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ entreprise.telephone }}</td>
            </tr>
            <tr>
                <th>E-mail</th>
                <td>{{ entreprise.email }}</td>
            </tr>
            <tr>
                <th>Activité</th>
                <td>{{ entreprise.activite }}</td>
            </tr>


            <td>
                <a title="Retour" href="{{ path('entreprise_index') }}"<button class="btn btn-primary"><i class="fa fa-arrow-left" aria-hidden="true"></i>
            </td>
            <td>
                {% if is_granted('ROLE_SUPER_ADMIN') %}        
                    <a title="Modifier" href="{{ path('entreprise_edit', {'id': entreprise.id}) }}"<button class="btn btn-primary"><i class="fa fa-pencil"aria-hidden="true"></i></button></a>
                {% endif %}
            </td>
        </tbody>
    </table>

    
        
            {% if is_granted('ROLE_SUPER_ADMIN') %}
                {{ include('entreprise/_delete_form.html.twig') }} 
            {% endif %}
        
{% endblock %}
