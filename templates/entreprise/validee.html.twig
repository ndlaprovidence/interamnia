{% extends 'base.html.twig' %}

{% block title %}Entreprise index{% endblock %}

{% block body %}
    
    <img class="Tablelogo" src="../LogoProvidence.png">

    {{ include('entreprise/search.html.twig') }}


    <h1>Entreprise</h1>

    
    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Région</th>
                <th>Département</th>
                <th>Ville</th>
                <th>Code postal</th>
                <th>Rue</th>                
                <th>Téléphone</th>
                <th>E-mail</th>
                <th>Activité</th>
                <th>validee</th>
            </tr>
        </thead>
        <tbody>
        {% for entreprise in entreprises %}
            <tr>
                <td>{{ entreprise.nom }}</td>
                <td>{{ entreprise.region }}</td>
                <td>{{ entreprise.departement }}</td>
                <td>{{ entreprise.ville }}</td>
                <td>{{ entreprise.codePostal }}</td>
                <td>{{ entreprise.rue }}</td>                
                <td>{{ entreprise.telephone }}</td>
                <td>{{ entreprise.email }}</td>
                <td>{{ entreprise.activite }}</td> 
                
                <td>
                                        
                    <td>                    
                        {% if is_granted('ROLE_SUPER_ADMIN') %}
                            <a title="Modifier" href="{{ path('entreprise_edit', {'id': entreprise.id}) }}"<button class="btn btn-primary"><i class="fa fa-check-circle-o" aria-hidden="true"></i></a>                                                 
                        {% endif %}
                    </td>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">Aucune données trouvées</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
