{% extends 'base.html.twig' %}

{% block title %}Stage index{% endblock %}

{% block body %}

    {{ include('stage/search.html.twig') }}

    <h1>Stages</h1>

     
    <a href="{{ path('stage_new') }}" button class="btn btn-primary" orderBy="u.nom" >Créer</button></a>
    
    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>BTS</th>
                <th>Entreprise</th>  
                <th>Période</th>         
                <th>Thème du stage</th>
                <th>Nom Professeurs</th>
                <th>Contact</th>
                <th>Date de début</th> 
                <th>Date de fin</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for stages in stages %}
            <tr>
                <td>{{ stages.user }}</td>
                <td>{{ stages.bts }}</td>
                <td>{{ stages.entreprise }}</td>
                <td>{{ stages.periode }}</td>
                <td>{{ stages.theme }}</td>
                <td>{{ stages.prof }}</td>
                <td>{{ stages.contact }}</td>
                <td>{{ stages.dateDebut|date('d-m-Y') }}</td>
                <td>{{ stages.dateFin|date('d-m-Y') }}</td>                
                <td>
                    <td>
                    
                    <a title="Afficher" href="{{ path('stage_show', {'id': stages.id}) }}"<button class="btn btn-primary"><i class="fa fa-eye" aria-hidden="true"></i> </button></a>        
                    </td>
                    <td>
                    <a title="Modifier" href="{{ path('stage_edit', {'id': stages.id}) }}"<button class="btn btn-primary"><i class="fa fa-pencil"aria-hidden="true"></i></button></a>
                    </td>
                    <td>                                        
                    
                    {% if is_granted('ROLE_SUPER_ADMIN') %} 
                        <a title="Imprimer" href="{{ path('stage_pdf') }}"<button class="btn btn-primary"><i class="fa fa-print" aria-hidden="true"></i></i></button></a>        
                    {% endif %}
                    </td>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucune données trouvées</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

   
{% endblock %}
