{% extends 'base.html.twig' %}

{% block title %}ActiviteEntreprise index{% endblock %}

{% block body %}
    <h1>Activité d'une entreprise</h1>
    
    <a href="{{ path('activite_entreprise_new') }}" button class="btn btn-primary" orderBy="u.nom" >Créer</button></a>
    <table class="table">
        <thead>
            <tr>
                <th>Activité</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for activite_entreprise in activite_entreprises %}
            <tr>
                <td>{{ activite_entreprise.activite }}</td>
                <td>                                   
                    <td>                    
                    <a title="Afficher" href="{{ path('activite_entreprise_show', {'id': activite_entreprise.id}) }}"<button class="btn btn-primary"><i class="fa fa-eye" aria-hidden="true"></i> </button></a>        
                    </td>
                    <td>
                    <a title="Modifier"  href="{{ path('activite_entreprise_edit', {'id': activite_entreprise.id}) }}"<button class="btn btn-primary"><i class="fa fa-pencil"aria-hidden="true"></i></button></a>
                    </td>                   
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune données trouvées</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
