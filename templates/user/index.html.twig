{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>Utilisateur</h1>
    <a href="{{ path('user_new') }}" button class="btn btn-primary" orderBy="u.nom" >Créer</button></a>
    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>E-mail</th>
                <th>Rôles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.nom }}</td>
                <td>{{ user.prenom }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>                    
                    <a title="Afficher" href="{{ path('user_show', {'id': user.id}) }}"<button class="btn btn-primary"><i class="fa fa-eye" aria-hidden="true"></i> </button></a>        
                    
                    <a title="Modifier" href="{{ path('user_edit', {'id': user.id}) }}"<button class="btn btn-primary"><i class="fa fa-pencil"aria-hidden="true"></i></button></a>

                    <a title="Consulter la liste des stagiaires" href="{{ path('user_profil', {'id': user.id}) }}"<button class="btn btn-primary"><i class="fa fa-user-circle" aria-hidden="true"></i>                            
                    
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucune données trouvées</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
